        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pippi_Chat_Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid Background="Black">
        <ListBox x:Name="lstMessaggi" HorizontalAlignment="Left" Height="333" Margin="48,31,0,0" VerticalAlignment="Top" Width="690" Foreground="#FFFF8900" FontFamily="Curlz MT" FontWeight="Bold"/>
        <Button x:Name="btn_invio" Content="invio" HorizontalAlignment="Left" Margin="475,373,0,0" VerticalAlignment="Top" Width="74" Click="txt_invio_Click" Foreground="Black" Background="#FF86FF00" FontFamily="Snap ITC"/>
        <TextBox x:Name="txt_invio1" HorizontalAlignment="Left" Height="23" Margin="48,369,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" FontFamily="Viner Hand ITC" Foreground="#FFFF8900"/>
        <Button x:Name="btn_discontetti" Content="Disconetti" HorizontalAlignment="Left" Margin="644,373,0,0" VerticalAlignment="Top" Width="74" Click="btn_discontetti_Click" Background="Red" FontFamily="Snap ITC"/>

    </Grid>
</Window>
