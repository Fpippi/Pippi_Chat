<Window x:Class="Pippi_Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pippi_Chat_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txt_ip" HorizontalAlignment="Left" Height="23" Margin="270,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Ip"/>
        <TextBox x:Name="txt_nickname" HorizontalAlignment="Left" Height="23" Margin="270,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="NickName"/>
        <TextBox x:Name="txt_porta" HorizontalAlignment="Left" Height="23" Margin="270,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Porta"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="270,342,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Porta" HorizontalAlignment="Left" Margin="270,215,0,0" VerticalAlignment="Top"/>
        <Label Content="Ip" HorizontalAlignment="Left" Margin="270,156,0,0" VerticalAlignment="Top"/>
        <Label Content="Nickname" HorizontalAlignment="Left" Margin="270,98,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
